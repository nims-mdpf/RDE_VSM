{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://rde.nims.go.jp/rde/dataset-templates/NIMS_VSM_TAMAKAWA_1.0/invoice.schema.json",
    "description": "固有情報と試料情報のスキーマ",
    "type": "object",
    "required": [
        "custom"
    ],
    "properties": {
        "custom": {
            "type": "object",
            "label": {
                "ja": "固有情報",
                "en": "Custom Information"
            },
            "required": [],
            "properties": {
                "sputtering_apparatus": {
                    "type": "string",
                    "label": {
                        "ja": "スパッタリング装置",
                        "en": "Sputtering Apparatus"
                    },
                    "options": {
                        "placeholder": {
                             "ja": "ファイル名から自動取得します",
                             "en": "Automatically get from file name"
                        }
                    }
                },
                "specimen_label": {
                    "type": "string",
                    "label": {
                        "ja": "試料名",
                        "en": "Specimen label"
                    },
                    "options": {
                        "placeholder": {
                             "ja": "ファイル名から自動取得します",
                             "en": "Automatically get from file name"
                        }
                    }
                },
                "sample_year": {
                    "type": "string",
                    "label": {
                        "ja": "試料作製年",
                        "en": "Sample year"
                    },
                    "options": {
                        "placeholder": {
                             "ja": "ファイル名から自動取得します",
                             "en": "Automatically get from file name"
                        }
                    }
                },
                "sample_month": {
                    "type": "string",
                    "label": {
                        "ja": "試料作製月",
                        "en": "Sample month"
                    },
                    "options": {
                        "placeholder": {
                             "ja": "ファイル名から自動取得します",
                             "en": "Automatically get from file name"
                        }
                    }
                },
                "sample_size_height": {
                    "label": {
                        "ja": "サンプルサイズ(縦)",
                        "en": "Sample size(height)"
                    },
                    "type": "number",
                    "options": {
                        "unit": "mm"
                    }
                },
                "sample_size_width": {
                    "label": {
                        "ja": "サンプルサイズ(横)",
                        "en": "Sample size(width)"
                    },
                    "type": "number",
                    "options": {
                        "unit": "mm"
                    }
                },
                "sample_size_thickness": {
                    "label": {
                        "ja": "サンプルサイズ(厚さ)",
                        "en": "Sample size(thickness)"
                    },
                    "type": "number",
                    "options": {
                        "unit": "nm"
                    }
                },
                "sample_area": {
                    "label": {
                        "ja": "サンプル膜面積",
                        "en": "Sample area"
                    },
                    "type": "number",
                    "options": {
                        "unit": "cm2"
                    }
                },
                "correction_factor": {
                    "label": {
                        "ja": "補正係数",
                        "en": "Correction factor"
                    },
                    "type": "number",
                    "default": 1
                },
                "background_removal": {
                    "label": {
                        "ja": "バックグラウンド処理の有無",
                        "en": "Background removal"
                    },
                    "type": "boolean",
                    "default": false
                },
                "spike_removal": {
                    "label": {
                        "ja": "スパイクノイズ除去処理の有無",
                        "en": "Spike removal"
                    },
                    "type": "boolean",
                    "default": false
                },
                "feature_acquisition": {
                    "label": {
                        "ja": "特徴量取得の有無",
                        "en": "Feature acquisition"
                    },
                    "type": "boolean",
                    "default": true
                },
                "common_data_type": {
                    "label": {
                        "ja": "登録データタイプ",
                        "en": "Data Type"
                    },
                    "type": "string",
                    "default": "TAMAKAWA-VSM"
                },
                "common_data_origin": {
                    "label": {
                        "ja": "データの起源",
                        "en": "Data Origin"
                    },
                    "type": "string",
                    "default": "experiments"
                },
                "common_technical_category": {
                    "label": {
                        "ja": "技術カテゴリー",
                        "en": "Technical Category"
                    },
                    "type": "string",
                    "default": "measurement"
                },
                "common_reference": {
                    "label": {
                        "ja": "参考文献",
                        "en": "Reference"
                    },
                    "type": "string"
                },
                "property_property": {
                    "label": {
                        "ja": "特徴的性質",
                        "en": "Property"
                    },
                    "type": "string",
                    "default": "磁性"
                },
                "property_sub_category": {
                    "label": {
                        "ja": "サブカテゴリー",
                        "en": "Sub category"
                    },
                    "type": "string",
                    "default": "保磁力(coercivity)"
                },
                "measurement_method_category": {
                    "label": {
                        "ja": "計測法カテゴリー",
                        "en": "Method category"
                    },
                    "type": "string",
                    "default": "磁気特性"
                },
                "measurement_method_sub_category": {
                    "label": {
                        "ja": "計測法サブカテゴリー",
                        "en": "Method sub-category"
                    },
                    "type": "string",
                    "default": "磁気特性測定システム"
                },
                "measurement_analysis_field": {
                    "label": {
                        "ja": "分析分野",
                        "en": "Analysis field"
                    },
                    "type": "string"
                },
                "measurement_measurement_environment": {
                    "label": {
                        "ja": "測定環境",
                        "en": "Measurement environment"
                    },
                    "type": "string"
                },
                "measurement_energy_level_transition_structure_etc_of_interest": {
                    "label": {
                        "ja": "対象準位_遷移_構造",
                        "en": "Energy Level_Transition_Structure etc. of interest"
                    },
                    "type": "string"
                },
                "measurement_measured_date": {
                    "label": {
                        "ja": "分析年月日",
                        "en": "Measured date"
                    },
                    "type": "string",
                    "format": "date"
                },
                "measurement_standardized_procedure": {
                    "label": {
                        "ja": "標準手順",
                        "en": "Standardized procedure"
                    },
                    "type": "string"
                },
                "measurement_instrumentation_site": {
                    "label": {
                        "ja": "装置設置場所",
                        "en": "Instrumentation site"
                    },
                    "type": "string"
                }
            }
        }
    }
}
